<%- include("partials/header"); %>

<div class="ui main text container segment">
    <div class="ui huge header">Edit <%= blog.title %></div>
    <form class="ui form" action="/blogs/<%=blog.id%>?_method=PUT" method="POST">
        <div class="field">
            <label>Title</label>
            <input type="text" name="blog[title]" placeholder="title" id="" value="<%= blog.title %>">
        </div>
        <div class="field">
            <label>Image</label>
            <input type="text" name="blog[image]" placeholder="image" id="" value="<%= blog.image %>">
        </div>
        <div class="field">
            <label>Blog Content</label>
            <textarea name="blog[body]" id="" cols="30" rows="10"><%= blog.body %> </textarea>
        </div>

        <button class="ui blue big basic button">Edit</button>
    </form>
</div>

<%- include("partials/footer"); %>