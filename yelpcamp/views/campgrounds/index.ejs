<%- include("../partials/header"); %>

<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>Campgrounds</h1>
            <p>View our specially curated list of campgrounds</p>
            <p>
                <a href="/campgrounds/new" class="btn btn-lg btn-primary">Add New Campground</a>
            </p>
        </div>
    </header>
    
    <div class="row">
        <% campgrounds.forEach((campground) => { %>
            <div class="col-md-3 col-sm-6">
                <div class="card">
                    <img class="card-img-top" src="<%=campground.image%>" alt="">
                    <div class="card-body">
                        <h5 class="card-title"><%=campground.name%></h5>
                        <a href="/campgrounds/<%=campground.id%>" class="card-link">Check it out</a>
                    </div>
                </div>
            </div>
            <% }); %>
        </div>
    </div>    
    
    <%- include("../partials/footer"); %>