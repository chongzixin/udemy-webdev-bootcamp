<%- include("../partials/header"); %>

<div class="container">
    <h1 class="d-flex justify-content-center">Create a new Campground</h1>
    <div class="row d-flex mt-3 justify-content-center">
        <div style="width: 30%;">
            <form action="/campgrounds" method="POST" enctype="multipart/form-data">
                <div class="form-group">
                    <input class="form-control" type="text" name="campground[name]" placeholder="name" id="">
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" name="campground[price]" placeholder="price" id="" min="0.01" step="0.01">
                </div>
                <div class="form-group center-text">
                    <input class="form-control" type="text" name="campground[image]" placeholder="image URL" id="">
                    <span>--- or ---</span>
                    <input class="form-control" type="file" name="campground[image]">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="campground[description]" placeholder="description" id="">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/campgrounds">Go Back</a>
        </div>
    </div>
</div>

<%- include("../partials/footer"); %>