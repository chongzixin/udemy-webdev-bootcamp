<%- include("../partials/header"); %>

<div class="container">
    <h1 class="d-flex justify-content-center">Edit <%= campground.name %></h1>
    <div class="row d-flex mt-3 justify-content-center">
        <div style="width: 30%;">
            <form action="/campgrounds/<%=campground.id%>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="campground[name]" placeholder="name" id="" value="<%=campground.name%>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" name="campground[price]" placeholder="price" id="" min="0.01" step="0.01" value="<%=campground.price%>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="campground[imgURL]" placeholder="image URL" id="" value="<%=campground.image%>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="campground[description]" placeholder="description" id="" value="<%=campground.description%>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Edit</button>
                </div>
            </form>
            <a href="/campgrounds">Go Back</a>
        </div>
    </div>
</div>

<%- include("../partials/footer"); %>