<%- include("../partials/header"); %>

<div class="container">
    <h1 class="d-flex justify-content-center">Edit Comment</h1>
    <div class="row d-flex mt-3 justify-content-center">
        <div style="width: 30%;">
            <form action="/campgrounds/<%=campground_id%>/comments/<%=comment.id%>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" placeholder="text" id="" value="<%=comment.text%>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/campgrounds/<%=campground_id%>">Go Back</a>
        </div>
    </div>
</div>

<%- include("../partials/footer"); %>